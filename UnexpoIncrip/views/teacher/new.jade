extends ../layout

block content
    
    form(action="/teacher/new", method= "POST")
        .container.py-2
            .row 
                .col-12.py-2
                    h2= title
                .col-md-6.col-12 
                    label.form-label(for="name") Nombre 
                    input#name.form-control(type="text", name="name")

                .col-md-6.col-12 
                    label.form-label(for="email") Email 
                    input#email.form-control(type="text", name="email")

                .col-md-12.col-12 
                    br

                .col-md-6.col-12 
                    label.form-label(for="age") Edad 
                    input#age.form-control(type="int", name="age")


                .col-md-6.col-12 
                    label.form-label(for="phone") Telefono 
                    input#phone.form-control(type="text", name="phone")


                .col-md-12.col-12 
                    br


                .col-md-12.col-12.py-2 
                    button.btn.btn-primary(type="submit") Crear
                    |  
                    a.btn.btn-secondary(href="/teacher") Cancelar
                